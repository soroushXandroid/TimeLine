<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_user_chat"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="40dp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_user"/>

    <TextView
        android:id="@+id/chat_tv_contact_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_logo"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        android:textDirection="rtl"
        android:maxLines="1"
        android:ems="7"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#F6F1F1"/>

    <TextView
        android:id="@+id/chat_tv_contact_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chat_tv_contact_username"
        app:layout_constraintStart_toStartOf="@id/chat_tv_contact_username"
        app:layout_constraintEnd_toEndOf="@id/chat_tv_contact_username"
        android:textDirection="rtl"
        android:maxLines="1"
        android:ems="7"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#F6F1F1"/>

    <ImageView
        android:id="@+id/iv_chat_call"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/iv_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo"
        app:layout_constraintStart_toEndOf="@id/chat_tv_contact_username"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_call"/>

</androidx.constraintlayout.widget.ConstraintLayout>